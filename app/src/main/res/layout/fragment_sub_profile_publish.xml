<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragments.SubProfilePublishFragment"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profile_publish"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@android:color/black"
                android:textColorHint="#666"
                android:hint="Escribe algo..."
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btn_profile_publish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Publicar"
                android:layout_margin="10dp"
                android:theme="@style/RaisedButtonHome"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_publish"
        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:layout_below="@+id/card_publish" />

</RelativeLayout>